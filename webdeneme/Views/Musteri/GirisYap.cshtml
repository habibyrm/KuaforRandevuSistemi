@model webdeneme.Models.Kullanici
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300" rel="stylesheet">
    <style>
        /* Genel Sayfa Ayarları */
        body {
            background-color: #8bc34a;
            font-family: 'Roboto', sans-serif;
            margin: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Navigasyon Çubuğu */
        .navbar {
            width: 100%;
            background-color: #ffffff;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

            .navbar .logo {
                font-size: 20px;
                font-weight: bold;
                color: #4CAF50;
                text-decoration: none;
            }

            .navbar .menu {
                list-style: none;
                display: flex;
                gap: 20px;
                margin: 0;
                padding: 0;
            }

                .navbar .menu a {
                    text-decoration: none;
                    color: #4CAF50;
                    font-size: 14px;
                    transition: color 0.3s;
                }

                    .navbar .menu a:hover {
                        color: #43A047;
                    }

        /* Form Konteyneri */
        .container {
            flex: 1; /* Sayfanın geri kalanını kapla */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form {
            background: #FFFFFF;
            max-width: 360px;
            padding: 45px;
            text-align: center;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
        .form label{
                color: #4CAF50;
                font-size: 18px;
        }

            /* Form Elemanları */
            .form input {
                font-family: 'Roboto', sans-serif;
                outline: 0;
                background: #f2f2f2;
                width: 100%;
                border: 0;
                margin: 0 0 15px;
                padding: 15px;
                box-sizing: border-box;
                font-size: 14px;
                border-radius: 5px;
            }

            .form button {
                font-family: 'Roboto', sans-serif;
                text-transform: uppercase;
                outline: 0;
                background: #4CAF50;
                width: 100%;
                border: 0;
                padding: 15px;
                color: #FFFFFF;
                font-size: 14px;
                cursor: pointer;
                border-radius: 5px;
                transition: background 0.3s;
            }

                .form button:hover, .form button:active {
                    background: #43A047;
                }

            .form .mesaj {
                margin: 15px 0 0;
                color: #4CAF50;
                font-size: 12px;
            }

                .form .mesaj a {
                    color: #4CAF50;
                    text-decoration: none;
                    font-weight: bold;
                }

        /* Footer */
        footer {
            background-color: #ffffff;
            text-align: center;
            padding: 10px 0;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
            color: #4CAF50;
        }

            footer a {
                text-decoration: none;
                color: #4CAF50;
            }
    </style>
</head>
<div class="giris">
    <div class="form">
        <form asp-action="GirisYap" method="post">
            <label><b>GİRİŞ</b></label><br />
            <br />
            <input type="email" name="Email" placeholder="E-posta" required />
            <input type="password" name="Sifre" placeholder="Şifre" required />
            <button type="submit">Giriş Yap</button>
            <p class="mesaj">Üye Değil Misin? <a asp-action="KayitOl">Hesap Oluştur</a></p>
        </form>
    </div>
</div>
